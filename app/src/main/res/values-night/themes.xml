    <style name="Theme.Geoplanner" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:letterSpacing" tools:ignore="NewApi">-0.03</item>
    </style>

    <style name="LaunchScreen" parent="Theme.Geoplanner">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">#FFF</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:elevation" tools:ignore="NewApi">1dp</item>
        <item name="android:translationZ" tools:ignore="NewApi">1dp</item>
        <item name="android:background">@drawable/primary_round</item>
    </style>

    <style name="backgroundTint">
        <item name="android:backgroundTint" tools:ignore="NewApi">@color/myRed</item>
    </style>

    <style name="Theme.Geoplanner.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="some_id">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="geoplanner">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorHint">@color/myWhite</item>
        <item name="android:hint">Поиск по месту</item>
    </style>
</resources>